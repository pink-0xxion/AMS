@model IEnumerable<AMS.Models.ViewModel.AttendanceLogDto>

@if (Model.Any())
{
    foreach (var log in Model)
    {
        TimeSpan? checkIn = TimeSpan.TryParse(log.CheckInTime, out var inTime) ? inTime : (TimeSpan?)null;
        TimeSpan? checkOut = TimeSpan.TryParse(log.CheckOutTime, out var outTime) ? outTime : (TimeSpan?)null;
        TimeSpan? workDuration = (checkIn.HasValue && checkOut.HasValue) ? (outTime - inTime) : null;

        <tr>
            <td>@log.LogDateTime.ToString("dd-MM-yyyy HH:mm")</td>
            <td>@log.CheckInTime</td>
            <td>@log.CheckOutTime</td>
            <td>
                @if (workDuration.HasValue)
                {
                    @($"{(int)workDuration.Value.TotalHours:D2}:{workDuration.Value.Minutes:D2} hrs")
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="text-center text-muted">
            No attendance logs found for the selected date.
        </td>
    </tr>
}




